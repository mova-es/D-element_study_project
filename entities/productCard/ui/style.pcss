.card {
    padding: 20px;
    background-color: #F2F3F4;
    max-width: 328px;
    max-height: 412px;
    border-radius: 12px;

    &__img {
        margin-bottom: 24px;
    }

    &__label {
        font-size: 16px;
        line-height: 24px;
        margin-bottom: 4px;
    }

    &__name {
        margin-bottom: 24px;
    }
}