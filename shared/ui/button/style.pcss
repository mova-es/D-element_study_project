.btn {
    background-color: var(--blue);
    padding: 12px 31px;
    color: #FFF;
    border: none;
    border-radius: 8px;
    cursor: pointer;

    &__form {
        background-color: var(--blue);
        padding: 12px 31px;
        color: #FFF;
        border: none;
        border-radius: 8px;
        cursor: pointer;
    }

    &:hover {
        box-shadow: -3px 3px 15px 0px rgba(0, 0, 0, 0.35);
    }

    &:active {
        box-shadow: -3px 3px 15px 0px rgba(0, 0, 0, 0.7);
    }
}